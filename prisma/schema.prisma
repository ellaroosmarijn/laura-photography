// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id    Int     @id @default(autoincrement())
  
  events Event[] 
}

model Event {
  id    Int     @id @default(autoincrement())
  customer_id Int

  customer Customer @relation(references: [id], fields: [customer_id], onDelete: Cascade, onUpdate: Cascade)

  media Media[]
}

model Media {
  id    Int     @id @default(autoincrement())
  event_id Int

  event Event @relation(references: [id], fields: [event_id], onDelete: Cascade, onUpdate: cascade)
}


model ShareLink {
  id Int @id
  event_id Int

  event Event @relation(references: [id], fields: [event_id], onDelete: Cascade. onUpdate: Cascade)
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id     Int      @id @default(autoincrement())
  name   String
  expiry DateTime @db.Date

  scenes      Scene[]
  share_links ShareLink[]
}

model Scene {
  id       Int    @id @default(autoincrement())
  event_id Int
  name     String

  events Event   @relation(references: [id], fields: [event_id], onDelete: Cascade, onUpdate: Cascade)
  media  Media[]
}

model Media {
  id                  Int    @id @default(autoincrement())
  image_order         Int
  web_resolution_url  String @unique
  high_resolution_url String @unique
  scene_id            Int

  scenes Scene @relation(references: [id], fields: [scene_id], onDelete: Cascade, onUpdate: Cascade)
}

model ShareLink {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  expiry    DateTime @db.Date
  event_id  Int

  event Event @relation(references: [id], fields: [event_id], onDelete: Cascade, onUpdate: Cascade)
}
